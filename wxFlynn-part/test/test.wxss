.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}
.tab-navs {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  
}
.tab-navs button{
  font-size:14px;
  margin: 0px 5px;
  line-height:1.55555556;
}
.tab-navs .active{
  color : deepskyblue;
}
.tab-pane {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.tab-pane .bangumi-list {
  display: flex;  
  flex-direction: column;
  padding: 20rpx;
}
.tab-pane .bangumi-item{
  padding: 10rpx 0rpx;
}
.tab-pane .hidden{
  display: none;  
}

.bangumi-item-img {
  float: left;
  width: 270rpx;
  height: 372rpx;
}