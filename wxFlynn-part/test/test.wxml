<view class="container">
  <loading wx:if="{{loading}}">正在努力加载中</loading>
  <template is="douban" data="{{list,img}}"/> 
</view>

<template name="douban">
  <view class="list" id="test">
    <block wx:for="{{list}}" wx:for-item="i" wx:key="list">
        <view class="item">
          <image class="item-img" src="{{i.room_src}}" data-src="{{i.room_src}}" background-size="cover" bindtap="previewImage"></image>
          <view class="item-info">
            <text> {{i.room_name}}</text>
            <!-- <text> {{i.nickname}}      {{i.online}}</text> -->
          </view>
        </view>
    </block>
  </view>
</template>