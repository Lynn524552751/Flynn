<view class="container">
  <view>
    <loading wx:if="{{loading}}">正在努力加载中</loading>
     <template wx:else is="bangumi" data="{{list,img}}"/> 
  </view>
</view>

<template name="bangumi">
  <view class="tab-pane">
    <block wx:for="{{list}}" wx:for-item="i" wx:key="list">
        <image class="bangumi-item-img" src="{{img}}" background-size="cover"></image>
        <text> {{i.title}}</text>
        <text>{{i.rate}}</text>
    </block>
  </view>
</template>