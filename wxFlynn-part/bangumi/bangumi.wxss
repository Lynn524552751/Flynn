
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.tab-navs {
  display: flex;
  flex-direction: row;
  padding: 40rpx;
}

.tab-navs .active {
  color: #00BFFF;
  border-bottom: 1rpx solid #00BFFF;
}

.tab-pane {
  padding: 40rpx;
}

.tab-pane .hidden {
  display: none;
}

.bangum-tab {
  display: inline-block;
  flex-direction: column;
  font-size: 14px;
  margin: 0px 5px;
  line-height: 1.55555556;
}

.bangumi-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.bangumi-item {
}

.bangumi-item-info {
  display: flex;
  flex-direction: column;
}

.bangumi-item-img {
  float: left;
  width: 180rpx;
  height: 180rpx;
}

.text-column {
  width: 100%;
  text-align: center;
}

.text-left {
  width: 100%;
  text-align: left;
}

.row {
  width: 100%;
  display: flex;
  flex-direction: row;
}
