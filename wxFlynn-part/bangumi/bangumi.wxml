<view class="container">
  <view>
    <loading wx:if="{{loading}}">正在努力加载中</loading>
    <template wx:else is="bangumi" data="{{bangumi,activeId,img}}"/>
  </view>
</view>

<template name="bangumi">
  <view class='tab-navs'>
    <block wx:for="{{bangumi}}" wx:for-item="i" wx:key="bangumi_list">
        <view class='tab-nav bangum-tab {{activeId == index ? "active" : ""}}' bindtap="activeTab" data-index="{{index}}">
          <text class='text-column'> {{i.date}} </text>
          <text class='text-column'> {{i.week_string}} </text>
        </view> 
    </block>
  </view>
  <view class='tab-pane'>
    <block wx:for="{{bangumi}}" wx:for-item="i" wx:key="bangumi_list">
      <view  class='bangumi-list {{activeId == index ? "" : "hidden"}}' data-index="{{index}}" >
      <block wx:for="{{i.seasons}}" wx:for-item="season" wx:key="season_list">
        <view  class='bangumi-item'>
          <image class="bangumi-item-img" src="{{img}}" background-size="cover"></image>
          <view  class='bangumi-item-info'>
            <text class="text-column">{{season.title}}</text> 
            <view class="row text-bottom">
              <text class="text-left text-bottom">{{season.pub_time}}</text>
              <text class="text-left text-bottom">{{season.pub_index}}</text>
            </view>
          </view>
        </view>
      </block>
      </view>
    </block>
  </view>
</template>